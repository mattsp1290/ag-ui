# AG-UI Environment Variables Example
# Copy this file to .env and set your own values

# Environment configuration
AG_UI_ENV=development
AG_UI_HOST=0.0.0.0
AG_UI_PORT=8080

# Security settings
JWT_SECRET=your-super-secret-jwt-key-here-minimum-32-characters
API_KEY_ADMIN=admin-api-key-here
API_KEY_USER=user-api-key-here

# Logging configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Debug settings
DEBUG=false

# Database configuration
DATABASE_URL=postgres://user:password@localhost:5432/agui

# Redis configuration
REDIS_ADDRESS=localhost:6379
REDIS_PASSWORD=

# Tracing configuration
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# External service URLs
EXTERNAL_API_URL=https://api.example.com
WEBHOOK_URL=https://webhooks.example.com

# File storage
FILE_STORAGE_PATH=/var/lib/ag-ui/files
TEMP_DIR=/tmp/ag-ui

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=10

# TLS/SSL
TLS_ENABLED=false
TLS_CERT_FILE=/path/to/cert.pem
TLS_KEY_FILE=/path/to/key.pem

# CORS
CORS_ALLOWED_ORIGINS=https://localhost:3000,https://app.example.com
CORS_ALLOW_CREDENTIALS=true

# Tool configuration
TOOL_HTTP_TIMEOUT=30s
TOOL_MAX_FILE_SIZE=10MB

# Agent settings
AGENT_MAX_CONCURRENT_TOOLS=10
AGENT_SESSION_TIMEOUT=1h
AGENT_MEMORY_LIMIT=512MB

# Client settings
CLIENT_TIMEOUT=30s
CLIENT_MAX_RETRIES=3

# State management
STATE_BACKEND=memory

# Feature flags
FEATURE_HOT_RELOAD=true
FEATURE_PROFILING=false
FEATURE_TEST_MODE=false